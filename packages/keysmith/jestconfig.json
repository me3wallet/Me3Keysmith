{
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "ts-jest", {
        "isolatedModules": true
      }
    ]
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": ["src/**/*.{ts,tsx}"],
  "collectCoverage":true,
  "testPathIgnorePatterns": ["<rootDir>/tests/fixtures"],
  "testTimeout": 100000
}
