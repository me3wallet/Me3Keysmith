{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*"
  ]
}
